<AdvanceScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Advance to the next round'
            font_size: 100
            font_name: './fonts/absolutepink.otf'
        Button:
            text: 'Advance to Level 2'
            on_press: root.manager.current = 'LEVEL2'
        Button:
            text: 'Advance to Level 3'
            on_press: root.manager.current = 'LEVEL3'

<WinScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'You win!'
            font_size: 50
        Button:
            text: 'Back Home'
            on_press: root.manager.current = 'HOME'

<LoseScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'You lose :('
            font_size: 50
        Button:
            text: 'Try Again'
            on_press: root.manager.current = 'LEVELS'





